{
  "name": "vallnet_wallet_server",
  "version": "2.2.0",
  "author": "bookmansoft <ceo@920.cc>",
  "contributors": [
    "bookmansoft <ceo@920.cc>"
  ],
  "license": "ISC",
  "description": "game logic server over cloud",
  "keywords": [
    "vallnet",
    "bitcoin",
    "cryptcurrency",
    "vallnet",
    "gamegold",
    "gameserver",
    "gamecloud",
    "gamelogic",
    "cloud",
    "k8s"
  ],
  "engines": {
    "node": ">=10.4.0"
  },
  "main": "index.js",
  "scripts": {
    "start": "pm2 startOrRestart pm2.config.js & pm2 monit",
    "log": "pm2 startOrRestart pm2.config.js & pm2 log",
    "stop": "pm2 delete pm2.config.js",
    "test": "mocha",
    "cover": "istanbul cover node_modules/mocha/bin/_mocha -- -R spec",
    "maintain": "node ./app/maintain.js",
    "commit": "cd config & db-migrate up --config migrations/gamecloud.json & cd..",
    "rollback": "cd config & db-migrate reset --config migrations/gamecloud.json & cd..",
    "dbinit": "cd config & db-migrate db:create gamecloud & db-migrate up --config migrations/gamecloud.json -e dev & cd.."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bookmansoft/gamegold-wechat-server.git"
  },
  "bugs": {
    "url": "https://github.com/bookmansoft/gamegold-wechat-server/issues"
  },
  "homepage": "https://github.com/bookmansoft/gamegold-wechat-server#readme",
  "devDependencies": {
    "chai": "^3.5.0",
    "mocha": "^6.1.4",
    "should": "^11.2.1"
  },
  "optionalDependencies": {
    "db-migrate": "^0.11.4",
    "db-migrate-mysql": "^1.1.10",
    "redis": "^2.8.0",
    "gamegold": "1.6.10"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "crc-32": "^1.0.2",
    "gamecloud": "^2.0.2",
    "gamerpc": "^2.0.2",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "string-random": "^0.1.3",
    "xml2js": "^0.4.19"
  }
}
